# Specify your gem's dependencies in yell.gemspec
gemspec

group :development, :test do
  gem "rake"

  gem 'rspec-core'
  gem 'rspec-expectations'
  gem "rr"
  gem 'pry'
  gem 'timecop'

  gem 'simplecov', :require => false, :platform => :ruby_20
  gem 'coveralls', :require => false, :platform => :ruby_20

  gem 'activesupport', '~> 4'
end

